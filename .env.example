# Facebook OAuth credentials
FACEBOOK_APP_ID=your_app_id
FACEBOOK_APP_SECRET=your_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:5000/facebook/callback

# Shopify OAuth credentials
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_REDIRECT_URI=http://localhost:5000/shopify/callback
SHOPIFY_WEBHOOK_ADDRESS=https://your-app.com/shopify/webhook

# DigitalOcean API credentials
DIGITALOCEAN_ACCESS_TOKEN=your_digitalocean_pat
SPACES_ACCESS_KEY=your_digitalocean_access_key
SPACES_SECRET_KEY=your_digitalocean_secret_key
SPACES_BUCKET=your-digitalocean-bucket-name
SPACES_REGION=nyc3

# Shared state token secret for CSRF protection (used in both Facebook and Shopify flows)
STATE_TOKEN_SECRET=replace_with_secure_token
